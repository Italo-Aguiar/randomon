datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Pokemon {
  id                Int           @id
  name              String
  pokedex_number    Int
  types             Type[]        @relation()
  image_url         String?
  // abilities         Ability[]
  // from_evolutions   Evolution[]   @relation("From")
  // to_evolutions     Evolution[]   @relation("To")
}

model Type {
  id                        Int           @default(autoincrement())         @id
  strong_against            Type[]        @relation("StrongAgainst")
  weak_against              Type[]        @relation("WeakAgainst")
  pokemons                  Pokemon[]
  // moves                     Move[]

  // ignorable relations
  strong_against_relation   Type[]        @relation("StrongAgainst")
  weak_against_relation     Type[]        @relation("WeakAgainst")
}

